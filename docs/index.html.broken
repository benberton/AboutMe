        /* Progress indicator */
        .progress-indicator {
            position: fixed;
            right: var(--space-md);
            top: 50%;
            transform: translateY(-50%);
            z-index: 90;
            display: flex;
            flex-direction: column;
            gap: var(--space-sm);
        }

        .progress-dot {
            width: 8px;
            height: 8px;
            border-radius: 50%;
            background: var(--stone-light);
            border: none;
            cursor: pointer;
            transition: all var(--transition-base);
            padding: 0;
        }

        .progress-dot.active {
            background: var(--slate);
            transform: scale(1.5);
        }

        .progress-dot:hover {
            background: var(--stone-dark);
        }

        /* Section separator mountains */
        .section-separator {
            position: absolute;
            left: 0;
            right: 0;
            height: 80px;
            bottom: -1px;
            background: linear-gradient(
                to bottom,
                transparent 0%,
                rgba(248, 249, 250, 0.8) 40%,
                rgba(248, 249, 250, 1) 100%
            );
            clip-path: polygon(
                0 100%,
                0 35%,
                10% 45%,
                20% 30%,
                30% 40%,
                40% 25%,
                50% 35%,
                60% 20%,
                70% 30%,
                80% 40%,
                90% 35%,
                100% 45%,
                100% 100%
            );
            pointer-events: none;
        }

        /* Main content */
        main {
            position: relative;
            z-index: 1;
            padding-top: 64px;
        }

        section {
            min-height: 100vh;
            padding: var(--space-xxl) var(--space-md);
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
        }

        section:nth-child(even) {
            background: rgba(248, 249, 250, 0.5);
        }

        .section-inner {
            max-width: 800px;
            width: 100%;
            opacity: 0;
            transform: translateY(20px);
            transition: opacity 600ms ease, transform 600ms ease;
        }

        .section-inner.visible {
            opacity: 1;
            transform: translateY(0);
        }

        .skip-link {
            position: absolute;
            top: -100px;
        /**
         * ENHANCED PARALLAX EFFECT
         * 
         * Differential scroll speeds across 7 layers:
         * - Far distant: 0.08x (slowest, horizon anchor)
         * - Distant: 0.12x (inherited from landscape transform)
         * - Mid-range: 0.22x
         * - Near: 0.32x
         * - Foreground: 0.38x (fastest solid layer)
         * - Goat: 0.38x (moves with foreground ridge)
         * - Fog: 0.05x (independent slow drift)
         */
        function initParallax() {
            if (prefersReducedMotion) return;

            const layers = {
                landscape: document.querySelector('.landscape'),
                mountainMid: document.querySelector('.mountain-mid'),
                mountainNear: document.querySelector('.mountain-near'),
                mountainFore: document.querySelector('.mountain-fore'),
                alpineGoat: document.querySelector('.alpine-goat'),
                atmosphereFog: document.querySelector('.atmosphere-fog')
            };
            
            let ticking = false;

            function updateParallax() {
                const scrolled = window.pageYOffset;
                
                // Far distant peaks (landscape pseudo-elements move with parent)
                if (layers.landscape) {
                    layers.landscape.style.transform = `translateY(${scrolled * 0.08}px)`;
                }
                
                // Mid-range mountains
                if (layers.mountainMid) {
                    layers.mountainMid.style.transform = `translateY(${scrolled * 0.22}px)`;
                }
                
                // Near mountains
                if (layers.mountainNear) {
                    layers.mountainNear.style.transform = `translateY(${scrolled * 0.32}px)`;
                }
                
                // Foreground ridges (fastest)
                if (layers.mountainFore) {
                    layers.mountainFore.style.transform = `translateY(${scrolled * 0.38}px)`;
                }
                
                // Alpine goat (moves with foreground)
                if (layers.alpineGoat) {
                    layers.alpineGoat.style.transform = `translateY(${scrolled * 0.38}px)`;
                }
                
                // Atmospheric fog (very slow independent drift)
                if (layers.atmosphereFog) {
                    layers.atmosphereFog.style.transform = `translateY(${scrolled * 0.05}px)`;
                }
                
                ticking = false;
            }

            window.addEventListener('scroll', () => {
                if (!ticking) {
                    window.requestAnimationFrame(updateParallax);
                    ticking = true;
                }
            }, { passive: true });
        }

        /* Components */
        .card {
            background: white;
            border: 1px solid var(--fog);
            padding: var(--space-md);
            margin-bottom: var(--space-md);
            transition: all var(--transition-base);
        }

        .card:hover {
            border-color: var(--stone-light);
            box-shadow: 0 2px 8px rgba(44, 62, 63, 0.04);
            transform: translateY(-1px);
        }

        .skills {
            display: flex;
            flex-wrap: wrap;
            gap: var(--space-xs);
            margin-top: var(--space-md);
        }

        .skill-tag {
            display: inline-block;
            padding: 4px 12px;
            background: var(--fog);
            color: var(--stone-dark);
            font-size: 0.875rem;
            font-weight: var(--font-medium);
            border-radius: 4px;
            transition: all var(--transition-base);
        }

        .skill-tag:hover {
            background: var(--stone-light);
            color: var(--slate);
        }

        .timeline {
            position: relative;
            padding-left: var(--space-md);
        }

        .timeline::before {
            content: '';
            position: absolute;
            left: 0;
            top: 8px;
            bottom: 0;
            width: 1px;
            background: var(--fog);
        }

        .timeline-item {
            position: relative;
            margin-bottom: var(--space-xl);
        }

        .timeline-item::before {
            content: '';
            position: absolute;
            left: calc(-1 * var(--space-md) - 4px);
            top: 8px;
            width: 9px;
            height: 9px;
            background: var(--slate);
            border-radius: 50%;
        }

        .contact-links {
            display: flex;
            flex-wrap: wrap;
            gap: var(--space-md);
            margin-top: var(--space-lg);
        }

        .contact-link {
            display: inline-flex;
            align-items: center;
            gap: var(--space-xs);
            color: var(--slate);
            text-decoration: none;
            font-weight: var(--font-medium);
            transition: color var(--transition-base);
        }

        .contact-link:hover {
            color: var(--stone-dark);
        }

        footer {
            padding: var(--space-lg) var(--space-md);
            text-align: center;
            color: var(--stone);
            font-size: 0.875rem;
        }

        /* Responsive */
        @media (max-width: 768px) {
            header {
                height: 56px;
            }

            .header-nav {
                display: none;
            }

            .progress-indicator {
                right: var(--space-sm);
            }

