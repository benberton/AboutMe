            }

            h2 {
                font-size: 2rem;
            }

            .timeline {
                padding-left: var(--space-sm);
            }
        }

        @media print {
            .landscape,
            .mountain-mid,
            .mountain-near,
            .mountain-fore,
            .atmosphere-fog,
            .section-separator,
            .progress-indicator,
            header {
                display: none;
            }

            section {
                min-height: auto;
                page-break-inside: avoid;
            }
        }

        @media (prefers-reduced-motion: reduce) {
            *,
            *::before,
            *::after {
                animation-duration: 0.01ms !important;
                animation-iteration-count: 1 !important;
                transition-duration: 0.01ms !important;
            }
        }
    </style>
</head>
